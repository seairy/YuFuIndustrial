<div class="pageheader">
  <h2><i class="fa fa-pencil-square-o"></i> 分支机构管理 <span>新建</span></h2>
</div>
<div class="contentpanel">
  <%= render "cms/commons/error_messages", target: @branch %>
  <div class="panel panel-dark">
    <div class="panel-heading">
      <h4 class="panel-title">分支机构信息</h4>
    </div>
    <div class="panel-body panel-body-nopadding">
      <%= form_for [:cms, @branch], html: { class: 'form-horizontal form-bordered' } do |f| %>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.zh_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :zh_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.en_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :en_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.zh_short_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :zh_short_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.en_short_name' %></label>
          <div class="col-sm-6">
            <%= f.text_field :en_short_name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.logo' %></label>
          <div class="col-sm-6">
            <%= f.file_field :logo, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.poster' %></label>
          <div class="col-sm-6">
            <%= f.file_field :poster, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.zh_description' %></label>
          <div class="col-sm-8">
            <%= f.cktext_area :zh_description, cols: 40 %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.en_description' %></label>
          <div class="col-sm-8">
            <%= f.cktext_area :en_description, cols: 40 %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.zh_short_description' %></label>
          <div class="col-sm-6">
            <%= f.text_field :zh_short_description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.en_short_description' %></label>
          <div class="col-sm-6">
            <%= f.text_field :en_short_description, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label"><%= brac_t 'branch.position' %></label>
          <div class="col-sm-6">
            <%= f.text_field :position, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <%= f.submit '提交', class: 'btn btn-primary' %>&nbsp;
            <%= link_to '返回', cms_branches_path, class: 'btn btn-default' %>&nbsp;
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>